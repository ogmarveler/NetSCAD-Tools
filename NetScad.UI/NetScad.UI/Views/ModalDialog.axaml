<UserControl
    x:Class="NetScad.UI.Views.ModalDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:NetScad.UI.Views"
    x:Name="ModalDialogRoot"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:CompileBindings="True"
    IsVisible="{Binding #ModalDialogRoot.IsOpen}"
    mc:Ignorable="d">

    <!--  Semi-transparent overlay  -->
    <Panel Background="#80000000">
        <Border
            MinWidth="800"
            MinHeight="200"
            MaxWidth="1240"
            MaxHeight="680"
            Margin="20"
            Padding="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="{DynamicResource WindowBackground}"
            BorderThickness="2"
            BoxShadow="2 2 8 2 Black"
            Classes="card_main"
            CornerRadius="6">

            <Grid RowDefinitions="Auto,*,Auto">
                <!--  Title Bar  -->
                <Border
                    Grid.Row="0"
                    Padding="15,10"
                    Background="{DynamicResource CardBackground}"
                    CornerRadius="6,6,0,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource CardForeground}"
                            Text="{Binding #ModalDialogRoot.Title}" />

                        <!--  Close button  -->
                        <Button
                            Grid.Column="1"
                            Height="30"
                            MaxWidth="30"
                            Padding="0"
                            HorizontalAlignment="Right"
                            HorizontalContentAlignment="Right"
                            Background="Transparent"
                            Click="CloseButton_Click"
                            Content="âœ•"
                            FontSize="18"
                            Foreground="{DynamicResource CardForeground}" />
                    </Grid>
                </Border>

                <!--  Content Area  -->
                <ScrollViewer
                    Grid.Row="1"
                    Margin="10"
                    Padding="10"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <ContentControl Content="{Binding #ModalDialogRoot.Content}" />
                </ScrollViewer>

                <!--  Optional Footer  -->
                <Border
                    Grid.Row="2"
                    Padding="10"
                    BorderBrush="{DynamicResource CardForeground}"
                    BorderThickness="0,1,0,0"
                    IsVisible="{Binding #ModalDialogRoot.ShowFooter}">
                    <ContentControl Content="{Binding #ModalDialogRoot.Footer}" />
                </Border>
            </Grid>
        </Border>
    </Panel>
</UserControl>